@model List<MyMvcApp.Models.User>

@{
    ViewBag.Title = "Index";
}

<h1>Users</h1>

<div>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</div>

<form method="get" asp-action="Search" style="margin-top: 10px;">
    <input type="text" name="query" placeholder="Search by name or email" />
    <button type="submit">Search</button>
</form>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>